    Public Sub Set_maxSq()

        Dim iRow As Integer, maxNo As Double

        For iRow = 0 To g10.RowCount - 1
            If maxNo < g10.ToDec("po_sq", iRow) Then
                maxNo = g10.ToDec("po_sq", iRow)
            End If
        Next
        g10.Text("po_sq") = maxNo + 1
    End Sub


