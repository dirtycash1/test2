    Public Overrides Sub MenuButton_Click(ByVal mty As MenuType)

        Select Case mty

            Case MenuType.New
                grp1_cd.Text = ""
                rel_dt.Text = ""
                Dim param As OpenParameters = New OpenParameters
                param.Add("@grp1_cd", "")
                param.Add("@rel_dt", "")
                Me.Open("qmz300_g20", param)
                g20.AddNewRow()

            Case MenuType.Save
                If CheckRequired(grp1_cd, rel_dt) Then
                    If Me.Save() Then
                        Me.Open()
                    End If
                End If

            Case Else
                MyBase.MenuButton_Click(mty)

        End Select

    End Sub

